#!/usr/bin/env ruby --enable=frozen_string_literal

############################################################################################################
## Requires                                                                                               ##
############################################################################################################

require('bundler')

Dir.chdir(File.expand_path('../..', __FILE__))
Bundler.setup(:default, :development)

require('htx')
require('minitest/autorun')

############################################################################################################
## Run                                                                                                    ##
############################################################################################################

Dir[File.expand_path('test/**/*_test.rb')].each do |file|
  require(file)
end
